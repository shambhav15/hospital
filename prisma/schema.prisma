generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  kindeId String @unique
  email   String @unique
  name    String
  image   String
}

model Hospital {
  H_No                      String  @unique
  Hospital_Name             String
  Place                     String
  Total_Doctors             Int
  Total_Beds                Int
  MortailityRate            Float
  Cleanliness_Score         Float
  Specialties_Present       String
  Total_Specialties_Present Int
  Stars                     Int?
  Image                     String?
  // Booking                   Booking[]
}

model Booking {
  id          String @id @default(cuid())
  name        String
  email       String
  aadhar      String
  address     String
  payment     String
  facility    String
  problem     String
  description String
  date        String
  hospital    String

  hospitalH_No String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
